---
import { Image } from 'astro:assets';

const { slug, title, image } = Astro.props;
---

<figure class="shrink-0 w-full relative">
  <div class="relative">
    <!-- <a href={`/project/${slug}`} class="no-underline relative block" aria-label={title}> -->
      <span class="relative block transition duration-500 ease-in-out transform rounded">
        <Image width={384} class="relative block object-contain object-center w-full h-full grayscale" loading="lazy" alt={title} src={image}>
      <!-- </span> -->
    </a>
  </div>
  <div class="pb-0 px-0 py-2">
    <h3 class="text-sauvignon-800 text-xl my-2">
      <a href={`/project/${slug}`} class="no-underline relative inline-block" aria-label={title}>{title}</a>
    </h3>
    <!-- <p class="text-sm font-serif mb-6 m-0 text-sirah-800 relative">{tags.join(', ')}</p> -->
  </div>
</figure>
