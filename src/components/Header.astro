---
import { getLangFromUrl, useTranslations } from 'src/i18n/utils';
import { getEntry } from 'astro:content';
import LanguagePicker from '../components/LanguagePicker.astro'

const general = await getEntry('settings','general');

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header class="block relative">
  <div class="flex flex-col">
    <div class="flex flex-col w-full mx-auto px-8 py-16 md:max-w-7xl">
      <div class="flex grow flex-wrap">
        <a href="#WhereToFind" class="flex w-auto basis-0 grow min-w-0 max-w-full items-center flex-[0_0_auto] gap-6 hover:underline">
          <span class="text-2xl font-light -tracking-wider">
            <span class="font-sans font-medium">{t('wheretofind.nav')}</span>
          </span>
        </a>
        <LanguagePicker />
      </div>
    </div>
  </div>
</header>
